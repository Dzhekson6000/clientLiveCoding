<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lang"
    style="@style/ActivityStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

        <LinearLayout
            style="@style/DivFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickRU" >

            <ImageView
                android:id="@+id/imageView1"
                style="@style/ImageFlag"
                android:src="@drawable/flag_ru" />

            <TextView
                android:id="@+id/desc_text"
                style="@style/DivFlagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/russia" />

        </LinearLayout>

        <LinearLayout
            style="@style/DivFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickEN"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                style="@style/ImageFlag"
                android:src="@drawable/flag_us" />

            <TextView
                android:id="@+id/textView2"
                style="@style/DivFlagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/english" />

        </LinearLayout>

        <LinearLayout
            style="@style/DivFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickDE"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                style="@style/ImageFlag"
                android:src="@drawable/flag_de" />

            <TextView
                android:id="@+id/textView3"
                style="@style/DivFlagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deutsch" />

        </LinearLayout>

    </LinearLayout>